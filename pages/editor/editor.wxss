/* pages/editor/editor.wxss */

.canvas-container {
  flex: 0 0 80vw;
  padding-top: 40rpx;
}

.canvas {
  width: 80vw;
  height: 80vw;
}

.swiper-container {
  flex: 1 0;
  padding-top: 40rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.btn-group {
  display: flex;
  height: 120rpx;
  justify-content: space-around;
  align-items: center;
  flex: 0 0 120rpx;
}
.custom-btn {
  width: 300rpx;
  height: 80rpx;
  background-image: linear-gradient(to right, rgb(127, 67, 221), rgb(190, 58, 203));
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  border-radius: 80rpx;
  box-shadow: 0 0 10rpx 6rpx rgba(225, 225, 225, .2) inset;
}

.custom-btn.active {
  box-shadow: 0 0 10rpx 6rpx rgba(225, 225, 225, .8) inset;
}

.swiper {
  flex: 1 0;
  padding: 20rpx;
  background-color: #fff;
}

.swiper-template {
  height: 100%;
}

.swiper-template .swiper-item {
  height: 100%;
}

.swiper-template .swiper-item-cover {
  height: 50%;
  width: 92%;
  margin: 0 4%;
}

.swiper-custom {
  height: 50%;
}

.swiper-custom .swiper-item {
  height: 100%;
}

.swiper-custom .swiper-item-cover {
  height: 100%;
  width: 92%;
  margin: 0 4%;
}

.btn-save {
  flex: 0 0 160rpx;
  width: 300rpx;
  display: flex;
  align-items: center;
}

.btn-image {
  width: 100%;
}