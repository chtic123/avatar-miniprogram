/* miniprogram/pages/upload/upload.wxss */
.list-container {
  flex: 1 0;
  padding: 20rpx;
  box-sizing: border-box;
  width: 100%;
  overflow: hidden;
}

.scroll-container {
  display: flex;
  flex-wrap: wrap;
}

.image-item {
  width: 25%;
  height: 0;
  padding-bottom: 25%;
  box-sizing: border-box;
  font-size: 0;
  position: relative;
}

.image-item .image-container {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  left: 10rpx;
  bottom: 10rpx;
}

.image-item .image-container.selected {
  box-sizing: border-box;
  border: 8rpx dashed gainsboro;
  border-radius: 10px;
}

.image-item .image-container.selected .selected-hook {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  top: -8rpx;
  right: -8rpx;
  background-color: red;
}

.image-item .image-container .image-cover {
  width: 100%;
  height: 100%;
}

.add-btn {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  border: 4px dashed gainsboro;
  border-radius: 10px;
  position: relative;
}

.add-btn:before {
  content: '';
  height: 4px;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 10%;
  right: 10%;
  margin: auto;
  background-color: gainsboro;
  border-radius: 4px;
}

.add-btn:after {
  content: '';
  width: 4px;
  position: absolute;
  top: 10%;
  bottom: 10%;
  left: 0;
  right: 0;
  margin: auto;
  background-color: gainsboro;
  border-radius: 4px;
}

.tool-bar {
  flex: 0 0;
  width: 100%;
  padding: 10px;
  border-bottom: 1px solid gainsboro;
  box-sizing: border-box;
  font-size: 0;
  text-align: right;
}

.footer-bar {
  flex: 0 0;
  width: 100%;
  padding: 10px;
  border-top: 1px solid gainsboro;
  box-sizing: border-box;
  font-size: 0;
  text-align: right;
}