<!--index.wxml-->
<view class="container bg-color">
  <view class="canvas-container">
    <canvas
      class="canvas"
      canvas-id="canvas"
      catchtouchstart="onTouchStart"
      catchtouchmove="onTouchMove"
      catchtouchend="onTouchEnd"
    />
    <text class="explain">可拖拽缩放，也可以本地选择其他图片</text>
  </view>
  
  <view class="btn-group">
    <view bindtap="onUpload">
      <image class="btn-image" mode="widthFix" src="../../images/upload.png" />
    </view>
    <view bindtap="onBegin">
      <image class="btn-image" mode="widthFix" src="../../images/begin.png" />
    </view>
  </view>
</view>